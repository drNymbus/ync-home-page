doctype html
html
	head
		include head
		title YNC - Gallery
	body
		div.showcase
			each p in projects
				div.project
					img(src=p.snippet)
					br
					if p.source
						p <a href=!{p.link}>!{p.name}</a> (<a href=!{p.source}>Source</a>)
					else
						p <a href=!{p.link}>!{p.name}</a>
					div.authors
						p Authors:
						mixin authors(a)
							a.author(href=a.link) !{a.name} <br>
						each a in p.authors
							+authors(a)
